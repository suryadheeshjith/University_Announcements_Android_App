<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBack">

    <TextView
        android:id="@+id/textViewHead"
        android:fontFamily="@font/ralewayheavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="80dp"
        android:textColor="@color/orange"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/body"
        android:fontFamily="@font/raleway"
        android:textColorLink="@color/colorAccent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:autoLink="web"
        android:ems="10"
        android:lines="10"
        android:textSize="20sp"
        android:textIsSelectable="true"
        android:scrollbars="vertical"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toTopOf="@+id/postdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHead" />




    <TextView
        android:id="@+id/postdate"
        android:fontFamily="@font/raleway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/body"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>